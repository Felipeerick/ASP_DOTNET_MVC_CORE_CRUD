@model projeto_web.Models.Category;
@{
    ViewData["title"] = "Criando Categorias";
}

<h1>Cadastro de nova categoria</h1>

<hr>
<form class='rounded shadow p-3 p-lg-5 form-group' enctype="multipart/form-data">
    <input asp-for="Name" type="text" minlength="3" maxlength="40" maxlength="20" required class="form-control"  placeholder="Nome da categoria">
    <div class='text-center'>
        <button type="submit" class='btn btn-warning mt-2'>Cadastrar categoria</button>
    </div>
</form>