@model IEnumerable<Moviment>

@{  
    ViewData["title"] = "Movimentos";
}

<h1>Listagem de movimentação</h1>

<a asp-action="create" class="btn btn-info my-3">Adicione nova movimentação</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Movimentação
            </th>
             <th>
                Produto
            </th>
            <th>
                Data/Horário
            </th>
            <th>
                Quantidade
            </th>
            <th>
                Descrição
            </th>
            <th>
                Ações
            </th>         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <td>
                    @Html.DisplayFor(modelItem => item.NameMoviment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateMoviment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="d-flex">
                    <div class="mx-2">
                        <a  asp-action="edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    </div>
                    <form class="pb-0 mb-0" asp-action="destroy" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-sm btn-danger">Apagar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>